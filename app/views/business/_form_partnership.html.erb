<%= form_for @partnership_contact, url: { action: "create_partnership_contact" }, remote: "true", html: { class: 'form-horizontal send_ajax', role: :form, 'data-model' => @partnership_contact.class.name.underscore, id: 'form-partnership-contact' } do |f| %>
<div class="status-message" style="display:none;">Obrigado, recebemos seu contato aguarde o retorno!</div>
  <div class="form-group">
    <div>
      <%= f.text_field :company_name,  class: 'form-control input-nome-empresa', placeholder: 'Empresa*' %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.text_field :responsible_person,  class: 'form-control input-nome-responsavel', placeholder: 'Nome*' %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.email_field :email,  class: 'form-control input-email', placeholder: 'E-mail*' %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.text_field :phone,  class: 'form-control input-telefone phone-format', placeholder: 'Telefone*' %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.text_area :observations,  class: 'form-control input-observacoes', placeholder: 'Fale mais sobre a parceria*' %>
      <span class="help-block"></span>
    </div>
  </div>
  <%= f.submit 'Enviar', class: 'btn' %>
<% end %>
